@model mamNonTuongLaiTuoiSang.Models.DiemDanh

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Sửa</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdDd" class="control-label">Mã điểm danh</label>
                <input asp-for="IdDd" class="form-control" readonly/>
                <span asp-validation-for="IdDd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdHs" class="control-label">Mã học sinh</label>
                <select asp-for="IdHs" class="form-control" asp-items="ViewBag.IdHs"></select>
                <span asp-validation-for="IdHs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdLop" class="control-label">Mã lớp</label>
                <select asp-for="IdLop" class="form-control" asp-items="ViewBag.IdLop"></select>
                <span asp-validation-for="IdLop" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ngay" class="control-label">Ngày</label>
                <input asp-for="Ngay" class="form-control" />
                <span asp-validation-for="Ngay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Thang" class="control-label">Tháng</label>
                <input asp-for="Thang" class="form-control" />
                <span asp-validation-for="Thang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrangThai" class="control-label">Trạng thái vắng</label>
                <input asp-for="TrangThai" class="form-control" />
                <span asp-validation-for="TrangThai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrangThaiNghi" class="control-label">Trạng thái phép</label>
                <input asp-for="TrangThaiNghi" class="form-control" />
                <span asp-validation-for="TrangThaiNghi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Trở lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
