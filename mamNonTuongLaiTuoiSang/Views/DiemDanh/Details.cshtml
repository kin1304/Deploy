@model mamNonTuongLaiTuoiSang.Models.DiemDanh

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Chi tiết</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Mã điểm danh
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdDd)
        </dd>
        <dt class="col-sm-2">
            Mã học sinh
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdHs)
        </dd>
        <dt class="col-sm-2">
            Mã lớp
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdLop)
        </dd>
        <dt class = "col-sm-2">
            Ngày
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ngay)
        </dd>
        <dt class = "col-sm-2">
            Trạng thái vắng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TrangThai)
        </dd>
        <dt class = "col-sm-2">
            Trạng thái phép
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TrangThaiNghi)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdDd">Sửa</a> |
    <a asp-action="Index">Trở lại</a>
</div>
