@model IEnumerable<mamNonTuongLaiTuoiSang.Models.HocSinh>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutPh.cshtml";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Mã Học Sinh
            </th>
            <th>
                Tên Học Sinh
            </th>
            <th>
                Giới Tính
            </th>
            <th>
                Năm Sinh
            </th>
            <th>
                Mã Phụ Huynh
            </th>
            <th>
                Quan Hệ
            </th>
            <th>
                Cân Nặng
            </th>
            <th>
                Chiều Cao
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdHs)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenHs)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GioiTinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NamSinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuanHe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CanNang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChieuCao)
            </td>
            <td>
                    <a href="@Url.Action("babyinfo","TreEm", new {id=item.IdHs})">Chi Tiết</a>
            </td>
        </tr>
}
    </tbody>
</table>
