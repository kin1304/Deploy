@model mamNonTuongLaiTuoiSang.Models.TinTuc

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>TinTuc</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdTinTuc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdTinTuc)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TieuDe)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TieuDe)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NoiDung)
        </dt>
        <dd class = "col-sm-10">
            @Html.Raw(Model.NoiDung)
        </dd>
        <dt class="col-sm-2">
            Hình ảnh
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Anh))
            {
                <img src="~/Content/images/@Model.Anh" style="width: 200px; height: auto;" />
            }
            else
            {
                <span>Không có hình ảnh</span>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MaSt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaSt)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdTinTuc">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>