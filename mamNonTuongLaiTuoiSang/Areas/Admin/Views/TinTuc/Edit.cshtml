@model mamNonTuongLaiTuoiSang.Models.TinTuc

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>TinTuc</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdTinTuc" class="control-label"></label>
                <input asp-for="IdTinTuc" class="form-control" readonly />
                <span asp-validation-for="IdTinTuc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TieuDe" class="control-label"></label>
                <input asp-for="TieuDe" class="form-control" />
                <span asp-validation-for="TieuDe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoiDung" class="control-label"></label>
                <textarea asp-for="NoiDung" class="form-control" id="NoiDung"></textarea>
                <span asp-validation-for="NoiDung" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Hình ảnh hiện tại:</label><br />
                @if (!string.IsNullOrEmpty(Model.Anh))
                {
                    <img src="~/Content/images/@Model.Anh" style="width: 100px; height: auto;" />
                }
            </div>
            <div class="form-group">
                <label asp-for="Anh" class="control-label"></label>
                <input type="file" name="anhFile" />
                <span asp-validation-for="Anh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaSt" class="control-label"></label>
                <select asp-for="MaSt" class="form-control" asp-items="ViewBag.MaSt"></select>
                <span asp-validation-for="MaSt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        CKEDITOR.replace('NoiDung', {
            filebrowserUploadUrl: '@Url.Action("UploadImage", "TinTuc", new { area = "Admin" })',
            filebrowserUploadMethod: 'form'
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
