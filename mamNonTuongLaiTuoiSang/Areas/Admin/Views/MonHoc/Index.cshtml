@model IEnumerable<mamNonTuongLaiTuoiSang.Models.MonHoc>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">
                @Html.DisplayNameFor(model => model.TenMh)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenMh)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdMh">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdMh">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdMh">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
