@model mamNonTuongLaiTuoiSang.Models.ChucVu

@{
    ViewData["Title"] = "Delete Chức vụ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Delete Chức vụ</h1>

<h3>Bạn có chắc chắn muốn xóa Chức vụ này?</h3>
<div>
    <h4>Chức vụ</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TenCv)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenCv)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ViTri)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ViTri)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LuongCoBan)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LuongCoBan)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HeSoLuong)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HeSoLuong)
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <!-- Hidden fields để giữ giá trị khóa chính -->
        <input type="hidden" asp-for="TenCv" />
        <input type="hidden" asp-for="ViTri" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
